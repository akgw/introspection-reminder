{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "es7",
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "@types/appraisal.d.ts"],
  "typeRoots": ["./src/@types", "node_modules/@types"]
}